doctype html
html(lang='en')
	head
		title MEAT Studies 2

		include ./partials/head.jade

	body
		include ./partials/navigation.jade

		section.profile-top
			.profilemenu
				mixin profilemenu(href, text, active)
					li
						a(href= href, class= active ? 'active' : '')= text

				ul
					+profilemenu('#', 'BOOKMARKS')
					+profilemenu('#', 'VIDEO')
					+profilemenu('#', 'COURSE')
					+profilemenu('#', 'HOMEWORK', true)
			.container
				.user-info
					.image-container
						.image-holder
							img(src='img/content/profile-image-1.png')
					.description-container
						.description-heading
							h1 Валентин Дядька
							.type-marker 
								span.marker-text UI+UX
						.contacts-holder
							a(href="mailto:VDyaydke@mail.ru") VDyaydke@mail.ru
							a(href="tel:+38 075 466 24 13") +38 075 466 24 13
						ul.socials
							li
								a(href='#')
									i.fa.fa-instagram
				.edit-btn-holder
					button.type-1 РЕДАКТИРОВАТЬ

		section.homeworks
			.container
				ul.breadcrumb
					li
						span HOMEWORK
					li
						span Лекция 1: Вводная
				ul.homeworks-list
					mixin work (name, workImage, userImage, you)
						li.work
							.image-holder
								img.fake-img(src= workImage, alt= name)
								.img(style="background-image:url(" + workImage + ")")
							.description-holder
								.image-holder
									img(src= userImage, alt= name)
								.name-holder
									.name= name
									if you
										.name-label (Это вы)

					li.work.upload-work
						.upload-icon-holder
							img(src="img/icons/upload-icon-1.svg", alt="")
						.label-holder
							span ЗАГРУЗИТЬ <br /> ДОМАШНЕЕ ЗАДАНЕ

					+work (
						'Валентин Дядька',
						'http://ramilrama.com/img/portfolio/portfolio-bg-ulo-1white.jpg',
						'http://i0.wp.com/blog.happy-chantilly.com/wp-content/uploads/2014/10/pink_hair_couleur_cheveux-_rose_colorful-_pastel_hairs3.jpg?resize=100%2C100'
					)
					+work (
						'Валентин Дядька',
						'http://ramilrama.com/img/portfolio/portfolio-bg-ulo-1white.jpg',
						'http://i0.wp.com/blog.happy-chantilly.com/wp-content/uploads/2014/10/pink_hair_couleur_cheveux-_rose_colorful-_pastel_hairs3.jpg?resize=100%2C100'
					)
					+work (
						'Валентин Дядька',
						'http://ramilrama.com/img/portfolio/portfolio-bg-ulo-1white.jpg',
						'http://i0.wp.com/blog.happy-chantilly.com/wp-content/uploads/2014/10/pink_hair_couleur_cheveux-_rose_colorful-_pastel_hairs3.jpg?resize=100%2C100'
					)

		include ./partials/footer.jade
	include ./partials/scripts.jade
