					.profile-messages-header
						span ПЕРЕЙТИ В ЛИЧНЫЙ КАБИНЕТ
					.profile-messages-content
						ul.messages-list
							mixin feed-item(src, name, happened, theme)
								li.message
									.image-container
										.image-holder
											img(src= src, alt= theme)
									.feed-description
										p
											span= name
											b= happened
											span= theme
							+feed-item (
								'http://gdj.gdj.netdna-cdn.com/wp-content/uploads/2013/05/Mobile-Apps-UIUX-Design-6-1.jpg',
								'Карина Лобова',
								' прокоментировал(а) статью',
