	body

		include ./partials/navigation.jade

		section.profile-top
			mixin profilemenu(href, text, active)
				li( class= active ? 'active' : '' )
					a( href= href )= text
			.profilemenu
				ul
					+profilemenu('#', 'bookmarks')
					+profilemenu('#', 'video')
					+profilemenu('#', 'course', true)
					+profilemenu('#', 'homework')
			.profilemenu-mobile
				.active-element
					a(href="#") bookmarks
				ul
					+profilemenu('#', 'bookmarks')
					+profilemenu('#', 'video')
					+profilemenu('#', 'course', true)
					+profilemenu('#', 'homework')
			.container
				.user-info
					.image-container
						.image-holder
							img(src='img/content/profile-image-1.png')
					.description-container
						.description-heading
							h1 Валентин Дядька
							.type-marker
								span.marker-text Teacher
